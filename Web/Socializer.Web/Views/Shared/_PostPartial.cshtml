@model PostViewModel
@inject IPostsService PostService
@inject UserManager<ApplicationUser> UserManager

<div class="card my-3">
    <div class="card-body">
        <div class="row">
            <div class="col">
                <h4 class="card-title"><a asp-controller="Profile" asp-action="Index" asp-route-username="@Model.Creator.UserName">@Model.Creator.FirstName @Model.Creator.LastName</a></h4>
                <div class="row">
                    <div class="col">
                        <sub>@Model.CreatedOn.ToLocalTime()</sub>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="dropdown float-right">
                    <button class="btn btn-dark dropdown-toggle" type="button" id="postDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-h"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="postDropDown">
                        <a class="dropdown-item" asp-controller="Posts" asp-action="Delete" asp-route-postId="@Model.Id" asp-route-returnUrl="@this.Context.Request.Path.Value">Delete</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <p class="card-text m-2">@Model.Content</p>
        </div>

        <div class="row text-center mt-2 py-2 border-top border-bottom">
            <div class="col">
                @if (!await this.PostService.IsLiked(Model.Id, this.UserManager.GetUserId(this.User)))
                {

                    <a asp-controller="Posts" asp-action="Like" asp-route-postId="@Model.Id" asp-route-returnUrl="@this.Context.Request.Path.Value" class="btn btn-outline-dark"><i class="far fa-thumbs-up"></i> Like</a>
                }
                else
                {
                    <a asp-controller="Posts" asp-action="UnLike" asp-route-postId="@Model.Id" asp-route-returnUrl="@this.Context.Request.Path.Value" class="btn btn-outline-dark"><i class="fas fa-thumbs-up"></i> Like</a>
                }
            </div>
            <div class="col">
                <a href="#" class="btn btn-outline-success"><i class="far fa-comment-alt"></i> Comment</a>
            </div>
            <div class="col">
                <a href="#" class="btn btn-outline-success"><i class="fas fa-share"></i> Share</a>
            </div>
        </div>
    </div>
</div>